export FZF_DEFAULT_COMMAND='ag -l -g ""'

source <(kubectl completion bash)
alias k=kubectl
complete -F __start_kubectl k

function _update_ps1() {
    PS1=$(powerline-shell $?)
}

if [[ $TERM != linux && ! $PROMPT_COMMAND =~ _update_ps1 ]]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi
